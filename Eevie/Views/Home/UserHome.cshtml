
@{
    ViewBag.Title = "UserHome";
    Layout = null;
}
<link href="../Content/bootstrap.min.css" rel="stylesheet">

<head>
    <title>Home</title>
    <meta charset="utf-8" />
    <link href="../Content/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script> 
</head>

<body>
    <!--Navbar-->
    @Html.Partial("../Shared/_HomeActiveNavbar")
    @Html.Partial("../Shared/_EvaluationFormPreviewModal")
    
    <!--My Templates-->
    <div class="container">
        <div id="mytemplates">

            <h1>My Templates</h1>
            <button class="btn btn-lg btn-default" onclick="@("window.location.href='" + @Url.Action("CreateEvaluationForm", "CreateEvaluationForm") + "'");">
                <span class="glyphicon glyphicon-file"></span> Create Template
            </button>
            <div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Last Modified</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr style="cursor:pointer" onclick="@("window.location.href='" + @Url.Action("Summary", "TemplateEvaluationSummary") + "'");">
                            <td>Sample template</td>
                            <td>June 23, 2017</td>
                            <td>
                                <button type="button" class="btn btn-default btn-sm" onclick="@("window.location.href='" + @Url.Action("EditEvaluationForm", "EditEvaluationForm") + "'");">
                                    <span class="glyphicon glyphicon-edit"></span> Edit
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div><!--My Templates-->

        <!--Other Templates-->
        <div id="othertemplates">
            <h1>Other Templates</h1>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Created By</th>
                        <th>Last Modified</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    <tr style="cursor:pointer" data-toggle="modal" data-target="#form-preview-number">
                        <td>Sample template</td>
                        <td>Author</td>
                        <td>June 23, 2017</td>
                        <td>
                            <button type="button" class="btn btn-default btn-sm">
                                <span class="glyphicon glyphicon-floppy-save"></span> Save
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div><!--Other Templates-->
    </div>
</body>

